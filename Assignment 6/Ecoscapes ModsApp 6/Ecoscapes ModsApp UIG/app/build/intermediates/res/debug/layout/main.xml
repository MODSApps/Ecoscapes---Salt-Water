<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/coverpage"
    android:gravity="center"
    android:padding="30dip"
    android:weightSum="1">


    <EditText
        android:id="@+id/username"
        android:layout_width="484dp"
        android:layout_height="66dp"
        android:hint="Please Enter Name"
        android:inputType="textEmailAddress"
        android:imeOptions="actionSend"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_x="30dp"
        android:layout_y="165dp" />

    <Button
        android:id="@+id/information_button"
        android:layout_width="151dp"
        android:layout_height="135dp"
        android:text="Saltwater Sidekicks"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_alignLeft="@+id/bts_button"
        android:layout_alignRight="@+id/bts_button"
        android:layout_alignTop="@+id/games_button"
        android:background="@null"
        android:layout_x="67dp"
        android:layout_y="240dp"
        android:textSize="35dp" />

    <Button
        android:id="@+id/games_button"
        android:layout_width="149dp"
        android:layout_height="119dp"
        android:text="Games"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:background="@null"
        android:layout_x="330dp"
        android:layout_y="250dp"
        android:textSize="40dp" />
    <Button
        android:id="@+id/bts_button"
        android:layout_width="155dp"
        android:layout_height="121dp"
        android:text="Behind the Scenes "
        android:layout_row="4"
        android:layout_column="0"
        android:layout_above="@+id/about_button"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="69dp"
        android:layout_x="65dp"
        android:layout_y="510dp"
        android:background="@null"
        android:textSize="32dp" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="153dp"
        android:layout_height="119dp"
        android:text="About "
        android:layout_row="14"
        android:layout_column="0"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/exit_button"
        android:layout_alignLeft="@+id/exit_button"
        android:layout_alignRight="@+id/games_button"
        android:background="@null"
        android:layout_x="330dp"
        android:layout_y="510dp"
        android:textSize="40dp" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="284dp"
        android:layout_height="75dp"
        android:text="Exit "
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_row="17"
        android:layout_column="0"
        android:layout_x="130dp"
        android:layout_y="700dp"
        android:background="@null"
        android:textSize="36dp" />


</AbsoluteLayout><!-- From: file:/C:/Program%20Files/Ecoscapes%20ModsApp%20UIG/app/src/main/res/layout/main.xml -->